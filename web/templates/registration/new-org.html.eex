					<fieldset>
						<input type="text" placeholder="Current Password:">
					</fieldset>
					<fieldset>
						<input type="text" placeholder="New Password:">
					</fieldset>
					<fieldset>
						<input type="text" placeholder="Confirm the New Password:">
					</fieldset>
					<a href="#" class="btn btn-blue left">STRIPE CONNECT</a>
