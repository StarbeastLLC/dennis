<h2>Listing challenges</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Shares count</th>
      <th>Miles</th>
      <th>Mile price</th>
      <th>Is active</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for challenge <- @challenges do %>
    <tr>
      <td><%= challenge.name %></td>
      <td><%= challenge.description %></td>
      <td><%= challenge.photo %></td>
      <td><%= challenge.shares_count %></td>
      <td><%= challenge.mile_price %></td>
      <td><%= challenge.is_active %></td>

      <td class="text-right">
        <%= link "Show", to: admin_challenge_path(@conn, :show, challenge), class: "btn btn-default btn-xs" %>
        <%= link "Edit", to: admin_challenge_path(@conn, :edit, challenge), class: "btn btn-default btn-xs" %>
        <%= link "Delete", to: admin_challenge_path(@conn, :delete, challenge), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New challenge", to: admin_challenge_path(@conn, :new) %>
